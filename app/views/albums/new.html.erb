<h1>New <%= @band.name %> Album Page!!!</h1>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label>Band:
    <select name="albums[band_id]">
      <% Band.all.each do |band| %>
      <option value="<%= band.id %>"><%= band.name %></option>
      <% end %>
    </select>
  </label><br>

  <label>Title:
    <input type="text" name="albums[title]" value="">
  </label><br>

  <label>Year:
    <input type="integer" name="albums[year]" value="">
  </label><br>

  <label>Recording:
    <input type="radio" name="albums[live?]" value="false" > Studio
    <input type="radio" name="albums[live?]" value="true" > Live
  </label><br>

  <input type="submit" value="Add Album">

</form>
